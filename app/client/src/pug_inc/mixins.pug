mixin section_header(title, desc)
    div(class="content-section-heading text-center")
        h3(class="text-secondary mb-0") Portfolio
        h2(class="mb-5") Recent Projects


mixin project_item(title, desc, img_path)
    div(class="col-lg-6")
        a(class="portfolio-item" href="#")
            span(class="caption")
                span(class="caption-content")
                    h2= title
                    p(class="mb-0")= desc
            img(class="img-fluid" src!= img_path alt="")
