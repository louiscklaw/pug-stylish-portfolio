//- common.pug

mixin sidebar_brand(link_href, link_text)
    a.js-scroll-trigger(href!=link_href)= link_text


mixin sidebar_item(link_href, link_text)
    a.js-scroll-trigger(href!=link_href)= link_text

mixin services_header(title, desc)
    div(class="content-section-heading")
        h3(class="text-secondary mb-0")= title
        h2(class="mb-5")= desc

mixin service(title, desc, icon)
    div(class="col-lg-3 col-md-6 mb-5 mb-lg-0")
        span.service-icon(class="rounded-circle mx-auto mb-3")
            i(class!=icon)

        h4
            strong= title

        p(class="text-faded mb-0")= desc

mixin content_about()
    section(class="content-section bg-light" id="about")
        div(class="container text-center")
            div(class="row")
                div(class="col-lg-10 mx-auto")
                    h2 Stylish Portfolio is the perfect theme for your next project!
                    p(class="lead mb-5") This theme features a flexible, UX friendly sidebar menu and stock photos from our friends at <a href="https://unsplash.com/">Unsplash</a>!
                    a(class="btn btn-dark btn-xl js-scroll-trigger" href="#services") What We Offer
                </div>
            </div>
        </div>

mixin helloworld
    p helloworld


mixin scroll_to_top
    a(class="scroll-to-top rounded js-scroll-trigger")
        i.fa-angle-up(class="fas")

